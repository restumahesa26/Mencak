        android:fontFamily="@font/roboto_medium"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/about_img_5"
        app:layout_constraintStart_toStartOf="@+id/about_img_5"
