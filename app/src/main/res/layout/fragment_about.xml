        android:fontFamily="@font/roboto_medium"
        android:textColor="#000"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/about_img_6"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/about_img_6"
        app:layout_constraintTop_toBottomOf="@+id/about_img_6"
        android:text="@string/cc_1" />

    <TextView
        android:id="@+id/about_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#000"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/about_img_3"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/about_img_3"
        app:layout_constraintTop_toBottomOf="@+id/about_img_3"
        android:text="@string/cc_2" />

