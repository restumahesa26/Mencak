        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/about_img_5"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:srcCompat="@drawable/image_md_2" />

    <TextView
        android:id="@+id/about_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/about_img_1"
        app:layout_constraintStart_toStartOf="@+id/about_img_1"
        app:layout_constraintTop_toBottomOf="@+id/about_img_1"
        android:text="@string/md_1" />

    <TextView
        android:id="@+id/about_text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/about_img_4"
        app:layout_constraintStart_toStartOf="@+id/about_img_4"
        app:layout_constraintTop_toBottomOf="@+id/about_img_4"
        android:text="@string/md_2" />

    <ImageView
        android:id="@+id/about_img_3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
